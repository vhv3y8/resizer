{
  "name": "resizer",
  "manifest_version": 3,
  "version": "0.1",
  "description": "helps to resize and change font of selected texts.",
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "bundle.js"
      ],
      "css": [
        "global.css"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "assets/resizerIconTransparent.png",
        "assets/escBig.png",
        "assets/leftMouse.png",
        "assets/rightMouse.png"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}